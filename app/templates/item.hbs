<GeneralContainer>
  <div class="product item-details-page">
    <ProductComponent::ProdutImage @src={{this.productImage}}/>
    <ProductComponent::ProductDetail @name={{this.model.name}} @price={{this.model.price}} @colors={{this.model.colors}} @color={{this.color}} @onChangeColor={{this.onChangeColor}} @isDetails={{true}}/>
  </div>
  <h5 class="mt-5">Features</h5>
  <ul>
    {{#each this.model.features as |feature|}}
     <li> {{feature}}</li>
    {{/each}}
  </ul>
</GeneralContainer>